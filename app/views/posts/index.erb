<header class="topnav">
    <div class="current__user">Logged in as @<%=current_user.username%></div>
    <a href="/logout" method="POST">Log Out</a>
    <a href="/users/<%=current_user.id%>">Profile</a>
    <a class="active" href="/posts">Home</a>
</header>
<h2>Posts</h2> 

<a href="/posts/new">New Post</a>
<p>
    <ul>
        <% Post.all.each do |post| %>
            <li class="post__link"><a href="/posts/<%=post.id%>"> <h3><%= post.title %></h3></a> by <a href="/users/<%=post.user.id%>"><%=post.user.username%></a></li>
        <% end %>
    </ul>
</p>