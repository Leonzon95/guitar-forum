<h2>Create a post</h2>
<%=@error%>
<form method="POST" action="/posts" id="post">
    <label for="title">Title: </title><br>
    <input type="text" id="title" name="post[title]" cols="7"><br>
    <br> <label for="content">Content: </label><br>
    <textarea type="text" form="post" name=post[content] rows="7" cols="60"></textarea> <br>
    <input type="submit" value="Submit">
</form>
